generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  episodes    Int?
  studio      String?
  rating      Int?
  genre       String?
  status      String?
  image       String?

  favorites   UserAnime[]  // ðŸ‘ˆ fixed
}

model Manga {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  year        Int?
  volumes     Int?
  chapters    Int?
  author      String?
  rating      Decimal?
  genre       String
  status      String
  image       String?

  favorites   UserManga[]  // ðŸ‘ˆ fixed
}

model Users {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  email      String       @unique
  password   String
  avatar     String?

  favoriteAnimes UserAnime[] // ðŸ‘ˆ fixed
  favoriteMangas UserManga[] // ðŸ‘ˆ fixed
}

model UserAnime {
  id      Int   @id @default(autoincrement())
  user    Users @relation(fields: [userId], references: [id])
  userId  Int
  anime   Anime @relation(fields: [animeId], references: [id])
  animeId Int
}

model UserManga {
  id      Int   @id @default(autoincrement())
  user    Users @relation(fields: [userId], references: [id])
  userId  Int
  manga   Manga @relation(fields: [mangaId], references: [id])
  mangaId Int
}

