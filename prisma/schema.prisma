generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model anime {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  episodes    Int?
  studio      String?
  rating      Int?
  genre       String?
  status      String?
  image       String?
}

model Manga {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  year        Int?
  volumes     Int?
  chapters    Int?
  author      String?
  rating      Decimal?
  genre       String
  status      String
  image       String?
}

model users {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique
  password String
  avatar   String?
}
